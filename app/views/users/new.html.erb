<h1> Signup Page</h1>
<%= form_for @user do |f| %>
    Username: <%= f.text_field :username %><br>
    Password: <%= f.password_field :password %><br>
    Password Confirmation: <%= f.password_field :password_confirmation %><br>

    <%= f.submit "Submit" %>
<% end %>

<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
<% end %>