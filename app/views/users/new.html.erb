<!DOCTYPE html>
<html>
  <head>
    <title>Fitness</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'user_plans', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
        <h3 class="top">GET THIS BREAD FITNESS</h3>
        <div class= "signup">
            <h1> Signup Page</h1>
            <%= form_for @user do |f| %>
                Username: <%= f.text_field :username %><br>
                Password: <%= f.password_field :password %><br>
                Password Confirmation: <%= f.password_field :password_confirmation %><br>

                <%= f.submit "Submit" %>
            <% end %>

            <div class="error">
                <% if @user.errors.any? %>
                    <% @user.errors.full_messages.each do |message| %>
                        <p><%= message %></p>
                    <% end %>
                <% end %>
            </div>
        </div>
    </body>
</html>